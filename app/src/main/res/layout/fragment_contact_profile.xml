<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathanmorgenstern.contactlistapplication.ContactDetailsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name:"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_profile_name"
        android:layout_width="384dp"
        android:layout_height="36dp"
        android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phoneNumberDisplay"
            android:layout_width="383dp"
            android:layout_height="36dp"
            android:text="Phone Number:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contact_profile_phone_number"
            android:layout_width="393dp"
            android:layout_height="36dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/relationshipDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:text="Relationshp:"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/contact_profile_relationship_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

</LinearLayout>
